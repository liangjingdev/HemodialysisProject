<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liangjing.hemodialysisproject.fragment.CycleScheduleFragment">

    <TextView
        android:id="@+id/tip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/tip1"
        android:textStyle="bold" />

    <com.liangjing.unirecyclerviewlib.recyclerview.OptionRecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rv_column="1"
        app:rv_default_animator_open="true"
        app:rv_divider_color="#fff"
        app:rv_divider_size="10dp"
        app:rv_orientation="vertical"
        app:rv_type="grid">

    </com.liangjing.unirecyclerviewlib.recyclerview.OptionRecyclerView>

</LinearLayout>
